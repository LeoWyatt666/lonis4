{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="ui two column grid">
  	<div class="column">
		<h1 class="ui header">
			{{ title }}</span>
		</h1>
	</div>
  	<div class="right aligned column">
		{% include "controller/servers/servers/_search.html.twig" %}
  	</div>
</div>

<hr>

<div class="ui two column grid">
	<div class="column center aligned">
		<img src="{{ asset(server.info.map ~'.jpg', 'maps') }}" 
			onerror="this.src='{{ asset('noimage.png', 'maps') }}'">
		
		<div class="ui segment left aligned">
			<div class="ui divided list">
				
				<div class="item">
					<i class="icon tint"></i>
					<div class="content">
						<a class="header">Name</a>
						<div class="description">{{ server.info.name }}</div>
					</div>
				</div>

				<div class="item">
					<i class="icon tint"></i>
					<div class="content">
						<a class="header">Map</a>
						<div class="description">{{ server.info.map }}</div>
					</div>
				</div>

				<div class="item">
					<i class="icon tint"></i>
					<div class="content">
						<a class="header">Players</a>
						<div class="description">{{ server.info.players_count }} / {{ server.info.players_max }}</div>
					</div>
				</div>
				
			</div>
		</div>
	</div>

	<div class="column">
		<table class="ui selectable celled table">
			<thead>
				<tr>
					<th><b>User</b></th>
					<th><b>Frags</b></th>
				</tr>
			</thead>
			<tbody>
				{% for player in server.info.ps %}
				<tr>
					<td>{{ player.n }}</td>
					<td>{{ player.s }}</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

{% endblock %}
